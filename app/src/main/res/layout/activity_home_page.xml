<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:background="@drawable/mau4"
    tools:context=".Activity_home_page">
<RelativeLayout
    android:layout_width="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="10dp">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="60dp"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@drawable/mau2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
    </com.google.android.material.appbar.AppBarLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="50dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="  Bạn muốn tìm gì " />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icons8_search" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:padding="10dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/white"
                android:padding="3dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/white"
                    android:padding="10dp"
                    app:cardCornerRadius="20dp">

                    <pl.droidsonroids.gif.GifTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/giphy"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout

            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/layout2"
            android:layout_marginTop="10dp"
            android:background="@drawable/switch_tumbs"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Follow"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Dành Cho Bạn"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Địa Danh"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout3"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="185dp"
                android:layout_height="160dp"
                android:background="@drawable/img_hoian"></RelativeLayout>

            <TextView
                android:id="@+id/tv1"
                android:layout_width="185dp"
                android:layout_height="30dp"
                android:layout_below="@id/layout4"
                android:background="@color/white"
                android:gravity="center"
                android:text="Hội An"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout

                android:id="@+id/layout5"
                android:layout_width="185dp"
                android:layout_height="160dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/img_quangbinh">

            </RelativeLayout>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="185dp"
                android:layout_height="30dp"
                android:layout_below="@id/layout5"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="Quảng Bình"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/layout7"
                android:layout_width="185dp"
                android:layout_height="160dp"
                android:layout_below="@+id/tv1"
                android:layout_marginTop="15dp"
                android:background="@drawable/img_hue">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout6"
                android:layout_width="185dp"
                android:layout_height="160dp"
                android:layout_below="@+id/tv2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/img_dalat">


            </RelativeLayout>

            <TextView
                android:layout_width="185dp"
                android:layout_height="30dp"
                android:layout_below="@id/layout7"
                android:background="@color/white"
                android:gravity="center"
                android:text="Huế"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="185dp"
                android:layout_height="30dp"
                android:layout_below="@id/layout6"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="Đà Lạt"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#02FBFB"
        app:itemTextColor="#FFFFFF"
        app:drawerLayoutCornerSize="40dp"
        app:headerLayout="@layout/layout_header_nav"
        app:menu="@menu/menu_nav"
        />

</androidx.drawerlayout.widget.DrawerLayout>